{{> header}}
    <div class="separacion">
        <h2>{{title}} News</h2>
        <section class="big-articles-list">
            {{#each articles}}
                <article class="big-article">
                    <img class="big-article-img" src="/images/foto-min.jpg">
                    <h3>{{title}}</h3>
                    <p>{{content}}</p>
                    <a href="/articles/article" class="article-read">Read More ></a>
                </article>
            {{/each}}
        </section>
    </div>
{{> footer}}